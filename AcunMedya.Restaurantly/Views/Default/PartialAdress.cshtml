
<section id="contact" class="contact">
    <div class="container" data-aos="fade-up">

        <div class="section-title">
            <h2>İletişim</h2>
            <p>İletişime Geç</p>
        </div>
    </div>

    <div data-aos="fade-up">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d48189.919215666305!2d29.09638328919829!3d40.98432846045537!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cac5ff013f5197%3A0xb59c129e51d7b8b8!2zQXRhxZ9laGlyL8Swc3RhbmJ1bA!5e0!3m2!1sen!2str!4v1740826447747!5m2!1sen!2str" width="1000" height="600" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>

    <div class="container" data-aos="fade-up">

        <div class="row mt-5">

            <div class="col-lg-4">
                <div class="info">
                    <div class="address">
                        <i class="bi bi-geo-alt"></i>
                        <h4>Lokasyon:</h4>
                        <p>@ViewBag.Location</p>
                    </div>

                    <div class="open-hours">
                        <i class="bi bi-clock"></i>
                        <h4>Açılış Saati:</h4>
                        <p>
                            @ViewBag.OpenHours
                        </p>
                    </div>

                    <div class="email">
                        <i class="bi bi-envelope"></i>
                        <h4>Email:</h4>
                        <p>@ViewBag.Email</p>
                    </div>

                    <div class="phone">
                        <i class="bi bi-phone"></i>
                        <h4>İletişim Numarası:</h4>
                        <p>+90 545 555 6748</p>
                    </div>

                </div>

            </div>
            @if (ViewBag.Message != null)
            {
                <script>alert('@ViewBag.Message')</script>
            }
            @Html.Action("PartialContact", "Default")

        </div>

    </div>
</section><!-- End Contact Section -->