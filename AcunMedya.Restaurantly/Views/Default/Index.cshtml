
@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html lang="en">

@Html.Action("PartialHead","Default")

<body>

    <!-- ======= Top Bar ======= -->
   @Html.Action("PartialTop","Default")   

    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top d-flex align-items-cente">
        <div class="container-fluid container-xl d-flex align-items-center justify-content-lg-between">

            <h1 class="logo me-auto me-lg-0"><a href="index.html">Restaurantly</a></h1>
            <!-- Uncomment below if you prefer to use an image logo -->
            <!-- <a href="index.html" class="logo me-auto me-lg-0"><img src="assets/img/logo.png" alt="" class="img-fluid"></a>-->
            @Html.Action("PartialNavbar", "Default")
            <a href="#book-a-table" class="book-a-table-btn scrollto d-none d-lg-flex">Rezervasyon Yap</a>

        </div>
    </header><!-- End Header -->
    <!-- ======= Hero Section ======= -->
    @Html.Action("PartialFeaturne","Default")

<main id="main">

    <!-- ======= About Section ======= -->
    @Html.Action("PartialAbout", "Default")<!-- End About Section -->
    <!-- ======= Why Us Section ======= -->
    @Html.Action("PartialService", "Default")<!-- End Why Us Section -->
    <!-- ======= Menu Section ======= -->
    @Html.Action("PartialMenu", "Default")<!-- End Menu Section -->
    <!-- ======= Specials Section ======= -->
    @Html.Action("PartialSpecials", "Default")<!-- End Specials Section -->
    <!-- ======= Events Section ======= -->
    @Html.Action("PartialEvent", "Default")<!-- End Events Section -->
    <!-- ======= Book A Table Section ======= -->
    @Html.Action("PartialBookaTable", "Default")<!-- End Book A Table Section -->
    <!-- ======= Testimonials Section ======= -->
    @Html.Action("PartialTestimonial", "Default")<!-- End Testimonials Section -->
    <!-- ======= Gallery Section ======= -->
    @Html.Action("PartialGallery", "Default")<!-- End Gallery Section -->
    <!-- ======= Chefs Section ======= -->
    @Html.Action("PartialChefs", "Default")<!-- End Chefs Section -->
    <!-- ======= Contact Section ======= -->
    <section id="contact" class="contact">
        <div class="container" data-aos="fade-up">

            <div class="section-title">
                <h2>İletişim</h2>
                <p>İletişime Geç</p>
            </div>
        </div>

        <div data-aos="fade-up">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d48189.919215666305!2d29.09638328919829!3d40.98432846045537!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cac5ff013f5197%3A0xb59c129e51d7b8b8!2zQXRhxZ9laGlyL8Swc3RhbmJ1bA!5e0!3m2!1sen!2str!4v1740826447747!5m2!1sen!2str" width="1000" height="600" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>

        <div class="container" data-aos="fade-up">

            <div class="row mt-5">
                <div class="col-lg-4">


                    @Html.Action("PartialAdress", "Default")

                </div>
                @if (@ViewBag.Message != null)
                {
                    <script>alert('@ViewBag.Message')</script>
                }
                
                    
                        @Html.Action("PartialContact", "Default")
                        
                    
                </div>
            </div>
        
    </section>

</main><!-- End #main -->
    <!-- ======= Footer ======= -->
    @Html.Action("PartialFooter","Default")<!-- End Footer -->

    <div id="preloader"></div>
    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

